let g:airline_theme = 'onehalfdark'

" set airline tabs
let g:airline#extensions#tabline#enabled = 1

" show buffer number in tab line - faster buffer delete with :bd <num>
let g:airline#extensions#tabline#buffer_nr_show = 1

