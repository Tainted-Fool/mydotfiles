	name = Tainted-Fool
	username = Tainted-Fool
[core]
	editor = "nvim"
  pager = LESS=-R delta
[credential]
	helper = store
[color]
	ui = auto
[diff]
	tool = vscode
[difftool "vscode"]
	cmd = "code --wait --diff $LOCAL $REMOTE"
[merge]
	tool = vscode
[mergetool "vscode"]
	cmd = "code --wait $MERGED"
[alias]
	alias = !git config --get-regexp alias | sed -re 's/alias\\.(\\S*)\\s(.*)$/\\1 = \\2/g'
	cm = commit
	co = checkout
	df = diff
	dfs = diff --staged
	ft = fetch --tags --all # Retrieve all tags
	lg = log --graph --date=relative --pretty=tformat:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%an %ad)%Creset'
	oops = commit --amend --no-edit # Add files to previous commit WITHOUT changing message
	reword = commit --amend # Edit last commit message
	st = status
	uncommit = reset --soft HEAD~1 # Undo last commit but keep files in stage area
	untrack = rm --cache --	# Remove files from Git but not from disk
[interactive]
  diffFilter = LESS=-R delta --color-only
[delta]
  navigate = true
  light = false
  side-by-side = true
  line-number = true
